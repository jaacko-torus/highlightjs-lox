{
	"compilerOptions": {
		"alwaysStrict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"inlineSourceMap": true,
		"outDir": "..",
		"typeRoots": ["../node_modules/@types"],
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ESNext"
	},
	"include": ["rollup.config.ts"],
	"exclude": ["node_modules"]
}