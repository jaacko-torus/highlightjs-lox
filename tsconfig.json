{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"alwaysStrict": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2015"
	},
	"include": ["src/**/*.ts", "types/**/*.ts"],
	"exclude": ["node_modules"]
}